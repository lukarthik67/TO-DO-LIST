# code
# to do list
to_do_list = []
def add_task ():
    task = input("enter  task  wants to add: ").strip()
    if task:
      to_do_list.append(task)
       print(f"Task :{task} added to the list succesfully") 
    else:    
         print(" Task cannot be empty.")
def remove_task ():
    task = input("enter a task wants to remove:").strip()
    if task in to_do_list:
        to_do_list.remove(task)
        print(f" task:{task} removed successfully")
    else:
        print("task not found in the list")
def show_task ():
    print("Your tasks:") 
    if len (to_do_list) > 0 :
        for index, task in enumerate(to_do_list, start=1):
            print(f"{index}. {task}")
       
    else:
        print("no task found  ")
  
while True:
    print("TO-DO-LIST menu:\n")
    print("enter  1 to add a task:")
    print("enter  2 to remove a task:  ")
    print("enter  3 to show tasks:")
    print("enter  4 to Quit : ")
    decision = int(input("enter your decision (1 / 2 / 3 / 4):\n"))
    match decision:
        case 1 :  add_task()
        case 2 :  remove_task()
        case 3 :  show_task()
        case 4 :  print(" Goodbye! Thanks for using the To-Do List.")
        case _ :  print(" Invalid choice. Please try again.")
